{
    "name": "dvdoug/db",
    "description": "PDO-like DB access, plus helper methods",
    "keywords": ["db","schema"],
    "homepage": "https://github.com/dvdoug/DB",
    "license": "MIT",
    "require": {
        "php": "^7.4||^8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18.1",
        "phpunit/phpunit": "^9.5.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "autoload": {
        "psr-4": {
            "DVDoug\\DB\\": "src/",
            "DVDoug\\DB\\Test\\": "tests/"
        },
        "files": ["src/bridge.php"]
    }
}
